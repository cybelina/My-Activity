#include <iostream>
using namespace std;

int main() {
    int num;
    int total = 0;

    while (true) {
        cout << "Enter an integer (0 to stop): ";
        cin >> num;

        if (num == 0) {
            break; // exit the loop
        }

        if (num > 0) {
            total += num;
        }
    }

    cout << "Sum of positive numbers: " << total << endl;
    return 0;
}
